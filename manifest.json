{
  "name": "划词股票池",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "让选股变得更简单",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png"
    },
    "default_title": "划词股票池"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}